<h1>My Tasks</h1>

<%= link_to  "Create a new task", tasks_new_path %>

<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to  "🗑", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %><%= link_to  task.title, task_path(task) %><% if task.completed %>☑️<%else%>❌<% end %></li>
  <% end %>
</ul>

